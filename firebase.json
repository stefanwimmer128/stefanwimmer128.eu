{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/graphiql",
        "function": "graphiql"
      },
      {
        "source": "/graphql",
        "function": "graphql"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
