{
    schema: {
        files: "src/server/**/*.gql"
    },
    query: {
        files: [
            {
                match: [
                    "src/client/**/*.js",
                    "src/client/**/*.vue",
                ],
                parser: [
                    "EmbeddedQueryParser",
                    {
                        startTag: "gql`",
                        endTag: "`",
                    },
                ],
                validate: {
                    extends: "gql-rules-query",
                    rules: {
                        LoneAnonymousOperation: "off",
                    },
                },
            },
        ],
    },
}
